<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/language"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/arrow"
            android:text="@string/language"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview" />
        
        <TextView
            android:id="@+id/dateTimePlayback"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/arrow"
            android:text="@string/dateTimePlayback"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview" />

        <TextView
            android:id="@+id/incomingCall"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/arrow"
            android:text="@string/incomingCall"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview" />

        <TextView
            android:id="@+id/incomingSMS"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/arrow"
            android:text="@string/incomingSMS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview" />
        
        <TextView
            android:id="@+id/streaming"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/arrow"
            android:text="@string/streaming"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textview" />
        
    </LinearLayout>

</ScrollView>
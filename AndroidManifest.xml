<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.ttsaid"
	android:versionCode="18"
	android:versionName="2.04" >
	<uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name" >
		<receiver
			android:name=".TTSWidget"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="com.ttsaid.intent.action.PLAY_TIME" />
				<action android:name="com.ttsaid.intent.action.PLAY_AND_ENQUEUE" />
				<action android:name="android.provider.Telephony.SMS_RECEIVED"/>
				<action android:name="android.intent.action.PHONE_STATE"/>
				<action android:name="com.ttsaid.intent.action.CONFIG_CHANGED"/>
			</intent-filter>
			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/widget_provider" />
		</receiver>
        <activity android:name=".SelectLanguage"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity android:name=".TTSActivity" android:launchMode="standard">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>
				<service 
					android:name="com.ttsaid.TTSService"
					android:enabled="true" />
		
		<service 
			android:name="com.ttsaid.LocalService"
			android:enabled="true" />
	</application>
</manifest>


